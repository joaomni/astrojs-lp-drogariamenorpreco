---
import SvgDown from '../components/SvgDown.astro'
---

<div class='scroll-down'><SvgDown width='22' height='22' fill='white' /></div>

<style>
	.scroll-down {
		position: absolute;
		bottom: 0px;
		left: 50%;
		transform: translateX(-50%);
		font-size: 1rem;
		color: #fff;
		animation: float 1.5s ease-in-out infinite;
		cursor: pointer;
	}

	@keyframes float {
		0%,
		100% {
			transform: translate(-50%, 0);
		}
		50% {
			transform: translate(-50%, -10px);
		}
	}
</style>
