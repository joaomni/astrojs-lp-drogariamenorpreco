---
import Layout from '../layouts/Layout.astro'
import SvgInsta from '../components/SvgInsta.astro'
import SvgWhats from '../components/SvgWhats.astro'
import TimeComponent from '../components/TimeComponent.astro'
import SvgPin from '../components/SvgPin.astro'
import Post1 from '../components/post1.astro'
