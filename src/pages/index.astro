import TimerCountdown from '../components/TimerCountdown.astro'
import ScrollButton from '../components/ScrollButton.astro'
---

<Layout title='Drogaria Menor Preço - Preço Baixo Todo Dia!'>
	<TimerCountdown />

	<div class='w-[580px] my-0 mx-auto text-center pt-16 pb-8 px-6'>
		<header class='flex flex-col items-center gap-6'>
			<img
				class='bg-white mb-4 rounded-full w-[96px] h-[96px] object-contain p-1'
