---
interface Props {
	title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang='en'>
	<head>
		<meta charset='utf-8' />
		<meta
			name='viewport'
			content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0'
		/>
		<script src='https://cdn.tailwindcss.com'></script>
		<link rel='shortcut icon' href='./favicon-cast.jpg' type='image/webp' />
		<link rel='icon' href='./favicon-cast.jpg' type='image/webp' />
		<meta
			name='description'
			content='A Cast Móveis Planejados e Decorações é especialista em transformar ambientes com soluções personalizadas e de alto padrão. Oferecemos móveis planejados e projetos de decoração que aliam funcionalidade, elegância e inovação. Nosso compromisso é proporcionar exclusividade e satisfação em cada detalhe, atendendo às necessidades e desejos dos nossos clientes com sofisticação e precisão.'
		/>
		<meta property='og:title' content='Cast Móveis Planejados e Decorações' />
		<link rel='canonical' href='https://castmoveis.com.br/' />
		<meta property='og:url' content='https://castmoveis.com.br/' />
		<meta
			property='og:description'
			content='A Cast Móveis Planejados e Decorações é especialista em transformar ambientes com soluções personalizadas e de alto padrão. Oferecemos móveis planejados e projetos de decoração que aliam funcionalidade, elegância e inovação. Nosso compromisso é proporcionar exclusividade e satisfação em cada detalhe, atendendo às necessidades e desejos dos nossos clientes com sofisticação e precisão.'
		/>
		<meta property='og:image:secure_url' content='./assets/logo-cast.jpg' />
		<meta property='og:image' content='./assets/logo-cast.jpg' />
		<meta property='profile:username' content='castmoveisplanejados' />
		<meta name='twitter:card' content='summary' />
		<meta name='twitter:title' content='Cast Móveis Planejados e Decorações' />
		<meta name='twitter:image' content='./assets/logo-cast.jpg' />
		<meta name='twitter:url' content='https://castmoveis.com.br/' />
		<link rel='preconnect' href='https://fonts.gstatic.com' />
		<link
			href='https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap'
			rel='stylesheet'
		/>
		<meta name='robots' content='INDEX, FOLLOW' />
		<meta name='robots' content='index, follow' />
		<meta name='viewport' content='width=device-width' />
		<link rel='icon' type='image/svg+xml' href='/favicon.png' />
		<link rel='stylesheet' href='./styles/styles.css' />
		<!-- <script src="https://cdn.tailwindcss.com"></script> -->
		<meta name='generator' content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<div class="background-drogaria"></div>
		
		<div class="content-drogaria">
			<slot />
		</div>

		<script async src='//www.instagram.com/embed.js'></script>
	</body>
</html>
